{
  "name": "chatbot-maker",
  "version": "1.0.0",
  "description": "AI-powered chatbot character card and lorebook generator",
  "private": true,
  "main": "electron/main.mjs",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix backend run start",
    "start:backend": "npm --prefix backend run start",
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on --timeout 60000 http://localhost:3000 && electron .\"",
    "electron:start": "electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:dir": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.chatbotmaker.app",
    "productName": "Chatbot Maker",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/dist/**/*",
      "package.json",
      "!backend/nodemon.json",
      "!backend/test-extract.js",
      "!backend/extracted-character.json",
      "!backend/uploads/**/*",
      "!Examples/**/*",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/*.ts",
      "!**/.DS_Store"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "extendInfo": {
        "NSDocumentsFolderUsageDescription": "Chatbot Maker needs access to open EPUB files you select.",
        "NSDownloadsFolderUsageDescription": "Chatbot Maker needs access to open EPUB files you select.",
        "NSDesktopFolderUsageDescription": "Chatbot Maker needs access to open EPUB files you select."
      }
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "wait-on": "^7.2.0"
  }
}
